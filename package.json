{
    "name": "dcorejs",
    "version": "2.1.1",
    "description": "",
    "keywords": [
        "blockchain",
        "dcore_js"
    ],
    "main": "lib/dcorejs.js",
    "module": "lib/dcorejs.js",
    "types": "dist/types/dcorejs.d.ts",
    "author": "DECENT Foundation <info@decent.ch>",
    "repository": {
        "type": "git",
        "url": "https://github.com/DECENTfoundation/dcorejs.git"
    },
    "directories": {
        "bin": "./dist",
        "lib": "./dist"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=5.0.0"
    },
    "scripts": {
        "start": "tsc -w & webpack --config webpack.config.js --watch",
        "prebuild": "rimraf dist && rimraf lib",
        "build": "tsc && webpack --config webpack.config.js && npm run generate-docs",
        "generate-docs": "typedoc --out dist/docs --target es6 --theme minimal --excludeExternals --includeDeclarations --excludePrivate --exclude \"{**/{api,mocks}/*.ts,**/crypt.ts}\" src",
        "test": "mocha -r ts-node/register test/**.ts",
        "test:integ:node": "mocha --exit -r ts-node/register test.integration/node/**.ts",
        "test:integ:browser": "node_modules/mocha-chrome/cli.js test.integration/browser/**.test.html --reporter list",
        "prepush": "npm run test && npm run build"
    },
    "devDependencies": {
        "@types/chai": "4.1.1",
        "@types/concat-stream": "1.6.0",
        "@types/mocha": "2.2.46",
        "@types/node": "8.0.47",
        "chai": "4.1.2",
        "colors": "^1.1.2",
        "cross-env": "5.1.1",
        "dcorejs-lib": "0.0.1",
        "jasmine": "2.9.0",
        "lodash.camelcase": "^4.3.0",
        "mocha": "5.0.0",
        "mocha-chrome": "1.0.3",
        "mocha-phantomjs": "4.1.0",
        "phantomjs": "2.1.7",
        "prompt": "^1.0.0",
        "replace-in-file": "^3.0.0-beta.2",
        "rimraf": "2.6.2",
        "ts-jest": "21.2.4",
        "ts-node": "4.1.0",
        "tslint": "5.8.0",
        "typedoc": "^0.9.0",
        "typescript": "2.5.3",
        "webpack": "3.8.1"
    },
    "dependencies": {
        "bluebird": "3.5.1",
        "crypto-js": "3.1.9-1",
        "ipfs-api": "15.0.1",
        "moment": "2.18.1",
        "ripemd160": "2.0.1",
        "ssl-root-cas": "1.2.4"
    },
    "prettier": {
        "tabWidth": 4
    }
}
